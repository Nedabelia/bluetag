<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aryan12"
    tools:context=".MainActivity">



    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navi"
        android:layout_gravity="start"
        app:menu="@menu/sidebar"
        app:headerLayout="@layout/header"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toolbari"
                app:title="toolbar"
                android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"/>

            <TextView
                android:id="@+id/main_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Login" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/walpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="walpaper"
                        android:textSize="@dimen/_22ssp"

                        android:paddingStart="@dimen/_10sdp"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="viewmore"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:paddingEnd="@dimen/_10sdp"
                        android:gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout >
               <ScrollView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/karna" />

    <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/karna" />

</LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:id="@+id/hdtextwall"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="HD walpaper"
                        android:textSize="@dimen/_22ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="viewmore"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/karna" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gaming"
                        android:textSize="@dimen/_22ssp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:gravity="start"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="viewmore"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/karna2" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reels"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22ssp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:gravity="start"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="viewmore"
                        android:textSize="@dimen/_15ssp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/karna2" />






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="rington"
                        android:textSize="@dimen/_22ssp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:gravity="start"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="viewmore"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:textSize="@dimen/_15ssp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:gravity="end"
                        android:layout_weight="1"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/karna"/>






            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>